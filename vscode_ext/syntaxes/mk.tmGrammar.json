{
  "scopeName": "source.abc",
  "patterns": [{ "include": "#expression" }],
  "repository": {
    "expression": {
      "patterns": [{ "include": "#keyword" }, { "include": "#comment" }, {"include": "#number"}, {"include": "#mathsymbol"}]
    },
    "keyword": {
      "match": "\\b(False|True|if|else|elif|None|while|break|continue|for|in|return|and|or|xor)\\b",
      "name": "keyword.control"
    },
    "comment": {
      "begin": "#",
      "end": "\n",
      "name": "comment"
    },
    "number": {
      "match": "([0-9]+[.])?[0-9]+",
      "name": "constant.numeric"
    },
    "mathsymbol": {
      "match": "[-+=|^/*]",
      "name": "constant.character"
    }
  }
}